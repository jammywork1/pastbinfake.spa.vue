</head>
<body>
    <div id="app">
        <header class="app-bar" data-role="appbar">
    <div class="container">
        <div class="app-bar">
        <span class="app-bar-divider"></span>
        <ul class="app-bar-menu">
            <li><a id="link_notes_all" href="#notes/all">All Notes</a></li>
            <li><a id="link_notes_create" href="#notes/create">Create new note</a></li>
        </ul>
        </div>
</div>
        </header>
<div class="container page-content">
    <div id="area_preloader" class="hidden">
        <div >
            <div class="margin-auto" data-role="preloader" data-type="cycle" data-style="color"></div>
        </div>
    </div>
    <div id="area_notes_all" class="hidden">
        <div class="">
            <table class="table hovered border bordered">
                <tr>
                    <th>Title</th>    
                    <th>Created</th>    
                </tr>
                <tr>
                    <td>asdasd asdasda asdasda asdasdas asdasd</td>
                    <td>23/11/2017 12:52</td>
                </tr>
            </table>
        </div>
    </div>

<div id="area_notes_create" class="hidden">
    <form
    data-role="validator"
    data-on-error-input="notifyOnErrorInput"
    data-show-error-hint="false">
        <div class="grid">
            <div class="row cells4">
                <div class="cell colspan3">
                    <label class="block">Title</label>
                    <div class="input-control text full-size">
                        <input
            data-validate-func="minlength"
            data-validate-arg="6"
            data-validate-hint="This field must contains min 6 symbols!"
            type="text"
            id="input_notes_create_title">
        <span class="input-state-error mif-warning"></span>
        <span class="input-state-success mif-checkmark"></span>
                            
                        <span class="input-state-error mif-warning"></span>
                        <span class="input-state-success mif-checkmark"></span>
                    </div>
                </div>
                <div class="cell">
                    <label>Note duration</label>
                    <div class="input-control select full-size">
                        <select id="select_notes_create_duration">
                        </select>
                    </div>
                </div>
            </div>
            <div class="row cells1">
                <div class="cell">
                    <label>Note body</label>
                    <div class="input-control textarea full-size" data-role="input" data-text-auto-resize="true">
                        <textarea style="min-height: 600px;" id="input_notes_create_body"></textarea>
                    </div>
                </div>
            </div>
            <div>
                <button class="button success" id="btn_notes_create">Create new note</button>
            </div>
        </div>
    </form>
</div>


    </div>
</div>
